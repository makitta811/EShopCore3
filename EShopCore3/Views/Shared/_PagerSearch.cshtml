@model EShopCore3.Models.Pager
@{
    var categoryItem = Context.Session.Get<string>("categoryItem"); 
    var searchItem = Context.Session.Get<string>("searchItem");
}

<div class="col-12">
    <div class="pagination">
        @if (Model.TotalPages > 0)
        {
            <ul class="pagination-list">

                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Home" asp-action="SearchItems" asp-route-pg="1" asp-route-categoryItem=@categoryItem asp-route-searchItem=@searchItem>First</a>
                    </li>
                    <li>
                        <a class="page-link" asp-controller="Home" asp-action="SearchItems" asp-route-pg="@(Model.CurrentPage - 1)" asp-route-categoryItem=@categoryItem asp-route-searchItem=@searchItem>Previous</a>
                    </li>
                }

                @for (int pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Home" asp-action="SearchItems" asp-route-pg="@pge" asp-route-categoryItem=@categoryItem asp-route-searchItem=@searchItem> @pge </a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Home" asp-action="SearchItems" asp-route-pg="@(Model.CurrentPage + 1)" asp-route-categoryItem=@categoryItem asp-route-searchItem=@searchItem>Next</a>
                    </li>
                    <li>
                        <a class="page-link" asp-controller="Home" asp-action="SearchItems" asp-route-pg="@(Model.TotalPages)" asp-route-categoryItem=@categoryItem asp-route-searchItem=@searchItem>Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>
