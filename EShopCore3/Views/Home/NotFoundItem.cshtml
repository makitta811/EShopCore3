                                                        <a class="cart-img" href="#"><img src="@item.ImagePath" alt="#"></a>
                                                        <h4><a href="#">@item.ItemName</a></h4>
                                                        @if (item.PromoPrice != 0)
                                                        {
                                                            <p class="quantity">@item.Quantity x - <span class="amount">$@item.PromoPrice</span></p>
                                                        }
                                                        else
